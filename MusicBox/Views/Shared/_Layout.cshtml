
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - MusicBox</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MusicBox</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							@Html.ActionLink(@Resources.Resource.SongList, "Index", "Song", null, new { @class = "navbar-brand" })
@* 
							<a class="nav-link text-dark" asp-area="" asp-controller="Song" asp-action="Index" style="font-size:26px">ПЛЕЙ-ЛИСТ</a *@
						</li>

					</ul>
				</div> 


			</div>
			@* <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="backgroundcolor:grey">

				<a class="navbar-brand myheader" asp-area="" asp-controller="Account" asp-action="Register">Регистрация</a>
			</div> *@
			<div class="container-fluid">
				@Html.ActionLink(@Resources.Resource.Registration, "Register", "Account", null, new { @class = "navbar-brand" })
				
			
				<div>
					@if (Context.Session.GetString("FirstName") == null)
					{
						@* <a class="navbar-brand myheader" asp-area="" asp-controller="Account" asp-action="Login">Войти</a> *@
						@Html.ActionLink(@Resources.Resource.Enter, "Login", "Account", null, new { @class = "navbar-brand" })
					}
					else
					{
						<span class="navbar-brand">Здравствуйте, @Context.Session.GetString("FirstName")  @Context.Session.GetString("LastName")</span>
						@* <a class="navbar-brand myheader" asp-area="" asp-controller="Home" asp-action="Logout">Выйти</a> *@
					}
				</div>
				@Html.ActionLink(@Resources.Resource.Exit, "Logout", "Home", null, new { @class = "navbar-brand" })

				@using (Html.BeginForm("ChangeCulture", "Home"))
				{
					<select name="lang" class="form-control">
						<option value="ru">Русский</option>
						<option value="en">English</option>
						<option value="uk">Українська</option>
						<option value="es">Espanol</option>

					</select>

					<input type="submit" name="submit" value="@Resources.Resource.ChooseLang" class="btn btn-default" style="border: 2px solid grey; background-color: mediumpurple;" />
					
				}
			</div>
			
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>


	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
